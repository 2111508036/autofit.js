{
  "include": ["src/**/*.ts"],
  "exclude": [],
  "compilerOptions": {
    "strict": true,
    "target": "ES6",
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/types",
    "isolatedModules": true,
    "removeComments": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "newLine": "LF",
    "allowJs": true,
    "checkJs": false,
    "preserveSymlinks": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "lib": ["ESNext", "DOM"],
    "module": "ES2015",
    "plugins": [
      {
        "name": "typescript-snapshots-plugin",
        "snapshotCallIdentifiers": ["toMatchSnapshot", "toThrowErrorMatchingSnapshot", "toMatchDiffSnapshot"]
      }
    ]
  }
}
